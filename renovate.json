{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "description": "Automerge Maven and Maven Wrapper updates",
            "matchDepNames": ["maven", "maven-wrapper"],
            "automerge": true
        },
        {
            "description": "Automerge updates for test-scoped dependencies",
            "matchDepTypes": ["test"],
            "automerge": true
        },
        {
            "description": "Automerge update for test library BOMs",
            "matchDepNames": [
                "org.junit:junit-bom",
                "org.mockito:mockito-bom"
            ],
            "automerge": true
        },
        {
            "description": "Automerge Error Prone updates",
            "matchDepNames": [
                "com.google.errorprone:error_prone_core",
                "com.uber.nullaway:nullaway"
            ]
        },
        {
            "description": "Automerge default Maven plugin updates",
            "matchDepNames": ["org.apache.maven.plugins:*"],
            "automerge": true
        }
    ]
}
